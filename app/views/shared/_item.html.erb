 <div class="cart-item">
      <%= image_tag item.product.image %>
      <div class="cart-item-info">
        <h5><%= item.product.name %></h5>
        $ <%= item.product.price %>
        <div class="cart-item-adjust">
          <%= link_to '+', adjust_item_product_path(item.product, type: "add"), method: :post %>
          <%= item.quantity %>
          <%= link_to '-', adjust_item_product_path(item.product, type:"substract"), method: :post %>
          <%= button_to "Delete", remove_from_cart_product_path(item.product)%>
        </div>
      </div>      
    </div>