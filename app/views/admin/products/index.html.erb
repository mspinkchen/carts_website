<div class="container">
  <div>
    <%= link_to 'Add product', new_admin_product_path, class: "btn btn-primary" %>
  </div>
  
  <div>
    <table class = "table table-striped table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>avatar</th>
          <th>Name</th>
          <th>description</th>
          <th>price</th>
          <th>#</th>
        </tr>
      </thead>

      <tbody>
      <% @products.each do |product|%>
        <tr>
          <th scope="row"><%= product.id %></th>
          <td><%= image_tag product.image, class: "myimage img-responsice" %></td>
          <td><%= product.name %></td>
          <td><%= product.description %></td>
          <td><%= product.price %></td>
            <td><%= link_to edit_admin_product_path(product) do %>
            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
            <% end %>
          </td>
          <td><%= link_to admin_product_path(product), method: :delete, data: {confirm:"Are you sure?"} do %>
            <i class="fa fa-trash" aria-hidden="true"></i>
          <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
