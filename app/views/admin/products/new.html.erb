<div class="container">
  <% if @product.errors.any? %>
  <h3>We have some errors here!</h3>
  <ul>
    <% @product.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>

  <div>
    <%= form_for [:admin, @product] do |f| %>
    <div class="form-group">
      <%= f.label :name, "Name" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description, "Description" %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :price, "Price" %>
      <%= f.text_field :price, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :image, "Upload Photo" %>
      <%= image_tag @product.image, width:'300px' if @product.image? %>
      <%= f.file_field :image, class: "form-control" %>
    </div>

    <div class="btn-group">
      <%= f.submit 'Add', class: "btn btn-info btn-block" %>
      <%= link_to 'Back', admin_products_path, class: 'btn btn-success btn-block' %>
    </div>

    <% end %>
  
  </div>
</div>