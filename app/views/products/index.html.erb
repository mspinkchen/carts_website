<div class="contianer">
  <div class="row">
    <div class="col-offset-2 col-md-10">
    <% @products.each do |product| %>
      <div class="col-sm-4 col-md-3">
        <% link_to product_path(product) do %>
      <%= image_tag product.image %>
      <%= product.name %>
      <% end %>
      <p>$ <%= product.price %></p>
      <h5><%=button_to 'Add to cart', add_product_to_cart_product_path(product) %></h5>
      </div>
    <% end %>
    <%= paginate @products %>
  </div>

    <section id = "my-cart">
    <h1>Cart</h1>
    <hr>
    <% current_cart.cart_items.each do |item| %>
    <div class="cart-item">
      <%= image_tag item.product.image %>
    </div>
    <div class="cart-item-info">
      <h5><%= item.product.name %></h5>
      $ <%= item.product.price %>
      <div class="cart-item-adjust">
        <%= item.quantity %>
        <%#= button_to "Delete", remove_from_cart_prosuct_path(item,product)%>
      </div>  
      
    </div>
    <% end %>
    <hr>
    <div class="subtotal">
      <p>SUBTOTAL</p>
      <p></p>
    </div>    
  </section>
  </div>

</div>