<div class="contianer">
  <div class="row">
    <%= @products.each do |product| %>
    <div class="col-sm-6 col-md-4">
      <div class="my-image">
      <%= image_tag product.image, class: "img-responsive" %>
      </div>
      <h4><%= product.name %></h4>
      <p><%= product.description %></p>
      <p>$<%= product.price %></p>
      <h5>Add to cart</h5>
    </div>
    <% end %>
  </div>

</div>